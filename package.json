  "main": "index.js",
  "scripts": {
    "pull": "shopify theme pull --store lopu-shop --path=src/theme",
    "publish": "shopify theme publish --store lopu-shop",
    "push": "shopify theme push --store lopu-shop --path=src/theme",
    "dev": "npm run dev:tailwind & npm run dev:shopify",
    "dev:shopify": "shopify theme dev --store=lopu-shop --theme-editor-sync --path=src/theme",
    "dev:tailwind": "TAILWIND_MODE=watch npx tailwindcss --watch -i ./src/theme/assets/tailwind.css -o ./src/theme/assets/tailwind.output.css",
    "test": "echo \"Error: no test specified\" && exit 1"
