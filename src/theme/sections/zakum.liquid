<div class="x-h-800px md:x-h-1400px x-overflow-hidden x-max-w-full  x-flex x-relative x-justify-center x-bg-black">
  <img 
    src="{{ "Zakum Altar Extended.png" | asset_url }}"
    class="x-object-cover x-object-top x-min-w-full x-min-h-full"
    />
  <div class="x-absolute x-flex x-px-8 x-flex-row x-justify-center x-pt-60 xleft-0 xtop-0 x-w-full x-h-full">
    <div class="x-flex x-flex-col x-max-w-full x-items-center">
      <div 
        style="text-shadow: 10px 10px 0px #2E2E2E"
        class="x-font-zakum x-text-90px md:x-text-150px x-text-white"
      >ZAKUM</div>

      <div class="
        x-flex x-flex-row x-pt-12p md:x-pt-20p 
        x-max-w-full x-overflow-scroll
      ">
        {%- for product in section.settings.collection.products -%}
          <div class="x-px-8 x-flex-shrink-0 x-w-80p md:x-w-auto">
            {% render 'product-card',
              product: product
            %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Zakum",
  "tag": "section",
  "class": "zakum-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Zakum"
    }
  ]
}
{% endschema %}
